<Window x:Class="Alakazam.Dialogs.ColorDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:Alakazam.Dialogs" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" Title="Color Picker" Height="450" Width="450" Style="{StaticResource defaultStyles}">
  <Grid>
    <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4">
      <TextBlock Text="{Binding Color}"/>
      <Button Name="okButton" Click="OnAccept" IsDefault="True">OK</Button>
      <Button Name="cancelButton" IsCancel="True">Cancel</Button>
    </StackPanel>
  </Grid>
</Window>