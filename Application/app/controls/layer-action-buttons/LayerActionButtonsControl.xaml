<UserControl x:Class="Alakazam.Controls.LayerActionButtonsControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
  <UniformGrid Rows="1">
    <UniformGrid.Resources>
      <Style TargetType="Button" BasedOn="{StaticResource button}">
        <Setter Property="Padding" Value="10"/>
      </Style>
    </UniformGrid.Resources>
    <Button Click="OnNewLayer">
      <fa:IconBlock Icon="File"/>
    </Button>
    <Button Click="OnMoveLayerUp">
      <fa:IconBlock Icon="ChevronUp"/>
    </Button>
    <Button Click="OnMoveLayerDown">
      <fa:IconBlock Icon="ChevronDown"/>
    </Button>
    <Button>
      <fa:IconBlock Icon="Clone"/>
    </Button>
    <Button Click="OnDeleteLayer">
      <fa:IconBlock Icon="TrashAlt"/>
    </Button>
    <!-- <Button Content="Hello"/>
    <Button Content="Hello"/>
    <Button Content="Hello"/> -->
  </UniformGrid>
</UserControl>